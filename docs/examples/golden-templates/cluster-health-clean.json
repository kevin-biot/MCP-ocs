{
  "schemaVersion": "1.0.0",
  "engineVersion": "0.8.0-beta",
  "templateId": "cluster-health-v1",
  "templateVersion": "1.0.0",
  "rubricVersions": {
    "triage": "triage-priority.v1",
    "confidence": "evidence-confidence.v1",
    "safety": "remediation-safety.v1"
  },
  "determinism": {
    "modelName": "none",
    "system_fingerprint": "none",
    "temperature": 0,
    "top_p": 1,
    "seed": 42
  },
  "evidenceThreshold": 0.7,
  "target": "cluster-health-clean",
  "steps": [
    "oc_diagnostic_cluster_health",
    "oc_read_nodes",
    "oc_read_get_pods"
  ],
  "evidence": { "completeness": 0.5, "missing": ["controlPlaneAlerts","fanoutHint"], "present": ["nodesSummary","podSummary"] },
  "rubricInputs": {
    "evidenceCompleteness": 0.5,
    "toolAgreement": 0.85,
    "freshnessMin": 5,
    "etcdHealthy": true,
    "controlPlaneReadyRatio": 0.67,
    "affectedNamespaces": 1,
    "noCriticalAlerts": true,
    "blastRadius": 0.5,
    "customerPaths": 0.3,
    "operatorsDegraded": 0,
    "timeSinceFirstEventMin": 72
  },
  "rubrics": {
    "triage": { "id": "triage-priority.v1", "kind": "weighted", "score": 0.33, "label": "P3", "bands": { "P1": ">=0.8", "P2": ">=0.55", "P3": "otherwise" }, "inputs": { "blastRadius": 0.5, "customerPaths": 0.3, "operatorsDegraded": 0, "timeSinceFirstEventMin": 72 }, "breakdown": { "blastRadius": 0.5, "customerPaths": 0.3, "operatorsDegraded": 0, "timeSinceFirstEventMin": 0.4 } },
    "confidence": { "id": "evidence-confidence.v1", "kind": "mapping", "label": "Low", "matched": "otherwise" },
    "safety": { "id": "remediation-safety.v1", "kind": "guards", "allowAuto": true, "guards": ["etcdHealthy == true","controlPlaneReadyRatio >= 0.66","affectedNamespaces <= 3","noCriticalAlerts == true"], "failing": [] },
    "slo": { "id": "slo-impact.v1", "kind": "mapping", "label": "LOW", "matched": "otherwise" }
  }
}
