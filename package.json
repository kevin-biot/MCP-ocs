{
  "name": "mcp-ocs",
  "version": "0.8.0-beta",
  "description": "Model Context Protocol server for OpenShift Container Platform operations and diagnostics",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openshift",
    "kubernetes",
    "operations",
    "diagnostics",
    "sre",
    "devops"
  ],
  "author": {
    "name": "Kevin Brown",
    "email": "kevin@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/kevin-biot/MCP-ocs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevin-biot/MCP-ocs.git"
  },
  "bugs": {
    "url": "https://github.com/kevin-biot/MCP-ocs/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "mcp-ocs": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist",
    "build:beta": "tsc src/index.beta.ts --outDir dist/beta && mkdir -p dist/beta",
    "build:production": "npm run build",
    "dev": "tsc --watch",
    "start": "node dist/src/index.js",
    "start:beta": "tsx src/index.beta.ts",
    "start:sequential": "tsx src/index-sequential.ts",
    "start:dev": "./scripts/dev/start-dev.sh",
    "memory:health": "tsx src/cli/memory-tools.ts health",
    "memory:reload": "tsx src/cli/memory-tools.ts reload",
    "memory:search": "tsx src/cli/memory-tools.ts search",
    "memory:find": "tsx src/cli/memory-tools.ts find",
    "memory:bench": "tsx src/cli/memory-bench.ts run",
    "memory:clean-bench": "tsx src/cli/memory-tools.ts clean-bench",
    "memory:delete-pattern": "tsx src/cli/memory-tools.ts delete-pattern",
    "memory:collections:list": "tsx src/cli/memory-tools.ts collections:list",
    "memory:collections:switch": "tsx src/cli/memory-tools.ts collections:switch",
    "memory:embedding-info": "tsx src/cli/memory-tools.ts embedding-info",
    "memory:test-consistency": "tsx src/cli/memory-tools.ts test-consistency",
    "test": "jest",
    "validate:beta": "jest --testPathPattern=beta",
    "beta:tools": "tsx src/cli/list-beta-tools.ts",
    "beta:tools:node": "node scripts/beta-list.js",
    "beta:tools:generate": "node scripts/generate-beta-config.mjs",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run",
    "test:security": "jest tests/security",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:adapter": "jest tests/unit/memory/mcp-ocs-memory-adapter.spec.ts --collectCoverage=false --runInBand",
    "itest:adapter": "tsx tests/integration/adapter-chroma-integration.ts",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "clean": "rm -rf dist && rm -rf logs/* && rm -rf tmp/* && rm -rf coverage",
    "docker:build": "docker build -t mcp-ocs .",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "preversion": "npm run beta:tools:generate && git add config/beta-tools.json",
    "release:beta": "npm run beta:tools:generate && git add config/beta-tools.json && git commit -m 'chore: sync beta tools JSON' && git tag v0.8.0-beta",
    "real:sanity": "bash scripts/real-oc-sanity.sh",
    "itest:real:cluster-health": "tsx tests/integration/real/cluster-health-real.ts",
    "itest:real:ns": "tsx tests/integration/real/namespace-health-real.ts",
    "itest:real:rca": "tsx tests/integration/real/rca-real.ts",
    "itest:beta:pod-health": "tsx tmp/pod-health.ts",
    "itest:beta:get-pods": "tsx tmp/get-pods.ts",
    "itest:beta:describe": "tsx tmp/describe.ts",
    "itest:beta:logs": "tsx tmp/logs.ts",
    "itest:beta:search-incidents": "tsx tmp/search-incidents.ts",
    "itest:beta:store-incident": "tsx tmp/store-incident.ts",
    "itest:beta:search-operational": "tsx tmp/search-operational.ts",
    "itest:beta:workflow-state": "tsx tmp/workflow-state.ts",
    "itest:beta:memory-stats": "tsx tmp/memory-stats.ts",
    "itest:beta:search-conversations": "tsx tmp/search-conversations.ts",
    "test:schemas": "jest tests/unit/schemas tests/unit/contract",
    "capture:real:init": "mkdir -p docs/real-examples",
    "capture:real:cluster": "bash scripts/capture-real.sh cluster -- --scope all --strategy auto --depth summary --max 5",
    "capture:real:ns": "bash scripts/capture-real.sh ns",
    "capture:real:rca": "bash scripts/capture-real.sh rca",
    "retest:setup": "bash scripts/retest-llm-setup.sh",
    "retest:smoke:ingress": "tsx scripts/smoke/smoke-sequential-ingress.ts",
    "retest:smoke:rca": "tsx scripts/smoke/smoke-sequential-rca.ts",
    "retest:smoke:all": "npm run -s retest:smoke:ingress && npm run -s retest:smoke:rca",
    "retest:smoke:plan-continue": "tsx scripts/smoke/smoke-seq-plan-continue.ts",
    "retest:smoke:ingress-multistep": "tsx scripts/smoke/smoke-seq-ingress-multistep.ts",
    "retest:smoke:redflag-mini-plan": "tsx scripts/smoke/smoke-seq-redflag-mini-plan.ts",
    "retest:smoke:te-ingress": "tsx scripts/smoke/smoke-template-ingress-pending.ts",
    "retest:smoke:te-sched": "tsx scripts/smoke/smoke-template-scheduling-failures.ts",
    "retest:smoke:te-crash": "tsx scripts/smoke/smoke-template-crashloop.ts",
    "retest:smoke:te-pvc": "tsx scripts/smoke/smoke-template-pvc-binding.ts",
    "retest:smoke:te-route": "tsx scripts/smoke/smoke-template-route-5xx.ts",
    "retest:smoke:infra-reads": "tsx scripts/smoke/smoke-infra-reads.mjs",
    "retest:smoke:te-scheduling": "tsx scripts/smoke/smoke-template-scheduling-failures.mjs",
    "retest:smoke:te-zone": "tsx scripts/smoke/smoke-template-zone-conflict.mjs",
    "retest:smoke:networking-discovery": "node scripts/smoke/smoke-networking-discovery.mjs",
    "retest:smoke:networking-discover": "node scripts/smoke/smoke-networking-discovery.mjs",
    "e2e:te-ingress": "node scripts/e2e/e2e-template-ingress-pending.mjs",
    "retest:smoke:te-determinism": "node scripts/smoke/smoke-template-determinism.mjs",
    "e2e:te-ingress:seq": "SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-ingress:perf": "PERF=true SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-ingress:deep": "COMPREHENSIVE=true SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-ingress:deep:perf": "COMPREHENSIVE=true PERF=true SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-ingress:mem": "SHARED_MEMORY_DIR=\"/Users/kevinbrown/memory/consolidated\" CHROMA_HOST=127.0.0.1 CHROMA_PORT=8000 TRANSFORMERS_CACHE=~/.cache/transformers SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-ingress:deep:mem": "COMPREHENSIVE=true SHARED_MEMORY_DIR=\"/Users/kevinbrown/memory/consolidated\" CHROMA_HOST=127.0.0.1 CHROMA_PORT=8000 TRANSFORMERS_CACHE=~/.cache/transformers SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-ingress:deep:perf:mem": "COMPREHENSIVE=true PERF=true SHARED_MEMORY_DIR=\"/Users/kevinbrown/memory/consolidated\" CHROMA_HOST=127.0.0.1 CHROMA_PORT=8000 TRANSFORMERS_CACHE=~/.cache/transformers SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-ingress-pending.mjs",
    "e2e:te-scheduling": "SERVER_ARGS=\"tsx src/index-sequential.ts\" node scripts/e2e/e2e-template-scheduling-failures.mjs",
    "template:hygiene:test:cluster-health": "tsx scripts/e2e/template-hygiene-tester.mjs cluster-health",
    "template:hygiene:test:monitoring": "tsx scripts/e2e/template-hygiene-tester.mjs monitoring",
    "template:hygiene:test:networking": "tsx scripts/e2e/template-hygiene-tester.mjs networking",
    "template:hygiene:test:storage": "tsx scripts/e2e/template-hygiene-tester.mjs storage",
    "template:hygiene:test:all": "npm run -s template:hygiene:test:cluster-health && npm run -s template:hygiene:test:monitoring && npm run -s template:hygiene:test:networking && npm run -s template:hygiene:test:storage",
    "lm:models": "node scripts/e2e/lmstudio-list-models.mjs",
    "template:hygiene:cross:all": "tsx scripts/e2e/cross-model-runner.mjs",
    "template:golden:snapshot": "tsx scripts/e2e/golden-snapshot.mjs",
    "template:golden:compare": "tsx scripts/e2e/golden-compare.mjs",
    "template:golden:snapshot:negative": "tsx scripts/e2e/golden-snapshot-negative.mjs",
    "template:golden:compare:negative": "node scripts/e2e/golden-compare-negative.mjs",
    "ci:templates": "npm run -s template:hygiene:test:all && npm run -s template:golden:compare && MIN_RUBRICS_COVERAGE=0.9 npm run -s rubrics:coverage:check",
    "ci:templates:negative": "npm run -s template:golden:compare:negative",
    "template:coverage": "tsx scripts/e2e/template-coverage.mjs",
    "format:summary": "node scripts/tools/format-summary.mjs",
    "format:summary:csv": "node scripts/tools/format-summary.mjs --csv",
    "rubrics:diagnostic:snapshot": "tsx scripts/e2e/rubrics-diagnostic-snapshot.mjs",
    "rubrics:diagnostic:snapshot2": "tsx scripts/e2e/rubrics-diagnostic-snapshot-2.mjs",
    "rubrics:coverage:check": "node scripts/rubrics/rubrics-coverage-check.mjs",
    "plan:ledger:append": "node scripts/plan/append-ledger.mjs",
    "rubrics:memory:snapshot": "tsx scripts/e2e/rubrics-memory-snapshot.mjs",
    "ci:planning:check": "node scripts/ci/check-planning-location.mjs"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@kubernetes/client-node": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@xenova/transformers": "^2.17.2",
    "express": "^4.18.0",
    "js-yaml": "^4.1.0",
    "mcp-shared-memory": "file:../MCP-router/src/memory",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.17.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "ajv": "^8.12.0",
    "cypress": "^13.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
