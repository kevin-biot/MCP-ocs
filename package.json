{
  "name": "mcp-ocs",
  "version": "0.1.0",
  "description": "Model Context Protocol server for OpenShift Container Platform operations and diagnostics",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openshift",
    "kubernetes",
    "operations",
    "diagnostics",
    "sre",
    "devops"
  ],
  "author": {
    "name": "Kevin Brown",
    "email": "kevin@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/kevin-biot/MCP-ocs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevin-biot/MCP-ocs.git"
  },
  "bugs": {
    "url": "https://github.com/kevin-biot/MCP-ocs/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-ocs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/*.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "./scripts/dev/start-dev.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=tests/integration/jest.config.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "clean": "rm -rf dist && rm -rf logs/* && rm -rf tmp/*"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@kubernetes/client-node": "^0.21.0",
    "mcp-shared-memory": "file:../MCP-router/src/memory",
    "express": "^4.18.0",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.8.3"
  }
}
