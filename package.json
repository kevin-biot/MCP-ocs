{
  "name": "mcp-ocs",
  "version": "0.1.0",
  "description": "Model Context Protocol server for OpenShift Container Platform operations and diagnostics",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openshift",
    "kubernetes",
    "operations",
    "diagnostics",
    "sre",
    "devops"
  ],
  "author": {
    "name": "Kevin Brown",
    "email": "kevin@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/kevin-biot/MCP-ocs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevin-biot/MCP-ocs.git"
  },
  "bugs": {
    "url": "https://github.com/kevin-biot/MCP-ocs/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-ocs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/*.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "./scripts/dev/start-dev.sh",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run",
    "test:security": "jest tests/security",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "clean": "rm -rf dist && rm -rf logs/* && rm -rf tmp/* && rm -rf coverage",
    "docker:build": "docker build -t mcp-ocs .",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "express": "^4.18.0",
    "js-yaml": "^4.1.0",
    "mcp-shared-memory": "file:../MCP-router/src/memory",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.17.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cypress": "^13.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  }
}
