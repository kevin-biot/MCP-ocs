{
  "name": "mcp-ocs",
  "version": "0.8.0-beta",
  "description": "Model Context Protocol server for OpenShift Container Platform operations and diagnostics",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openshift",
    "kubernetes",
    "operations",
    "diagnostics",
    "sre",
    "devops"
  ],
  "author": {
    "name": "Kevin Brown",
    "email": "kevin@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/kevin-biot/MCP-ocs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevin-biot/MCP-ocs.git"
  },
  "bugs": {
    "url": "https://github.com/kevin-biot/MCP-ocs/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "mcp-ocs": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist",
    "build:beta": "tsc src/index.beta.ts --outDir dist/beta && mkdir -p dist/beta",
    "build:production": "npm run build",
    "dev": "tsc --watch",
    "start": "node dist/src/index.js",
    "start:beta": "tsx src/index.beta.ts",
    "start:dev": "./scripts/dev/start-dev.sh",
    "test": "jest",
    "validate:beta": "jest --testPathPattern=beta",
    "beta:tools": "tsx src/cli/list-beta-tools.ts",
    "beta:tools:node": "node scripts/beta-list.js",
    "beta:tools:generate": "node scripts/generate-beta-config.mjs",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run",
    "test:security": "jest tests/security",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:adapter": "jest tests/unit/memory/mcp-ocs-memory-adapter.spec.ts --collectCoverage=false --runInBand",
    "itest:adapter": "tsx tests/integration/adapter-chroma-integration.ts",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "clean": "rm -rf dist && rm -rf logs/* && rm -rf tmp/* && rm -rf coverage",
    "docker:build": "docker build -t mcp-ocs .",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "preversion": "npm run beta:tools:generate && git add config/beta-tools.json",
    "release:beta": "npm run beta:tools:generate && git add config/beta-tools.json && git commit -m 'chore: sync beta tools JSON' && git tag v0.8.0-beta",
    "real:sanity": "bash scripts/real-oc-sanity.sh",
    "itest:real:cluster-health": "tsx tests/integration/real/cluster-health-real.ts",
    "itest:real:ns": "tsx tests/integration/real/namespace-health-real.ts",
    "itest:real:rca": "tsx tests/integration/real/rca-real.ts",
    "itest:beta:pod-health": "tsx tmp/pod-health.ts",
    "itest:beta:get-pods": "tsx tmp/get-pods.ts",
    "itest:beta:describe": "tsx tmp/describe.ts",
    "itest:beta:logs": "tsx tmp/logs.ts",
    "itest:beta:search-incidents": "tsx tmp/search-incidents.ts",
    "itest:beta:store-incident": "tsx tmp/store-incident.ts",
    "itest:beta:search-operational": "tsx tmp/search-operational.ts",
    "itest:beta:workflow-state": "tsx tmp/workflow-state.ts",
    "itest:beta:memory-stats": "tsx tmp/memory-stats.ts",
    "itest:beta:search-conversations": "tsx tmp/search-conversations.ts",
    "test:schemas": "jest tests/unit/schemas tests/unit/contract",
    "capture:real:init": "mkdir -p docs/real-examples",
    "capture:real:cluster": "bash scripts/capture-real.sh cluster -- --scope all --strategy auto --depth summary --max 5",
    "capture:real:ns": "bash scripts/capture-real.sh ns",
    "capture:real:rca": "bash scripts/capture-real.sh rca"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@kubernetes/client-node": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "chromadb": "^3.0.10",
    "express": "^4.18.0",
    "js-yaml": "^4.1.0",
    "mcp-shared-memory": "file:../MCP-router/src/memory",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.17.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cypress": "^13.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "ajv": "^8.12.0"
  }
}