{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {},
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    },
    {
      "files": [
        "src/tools/state-mgmt/index.ts",
        "src/tools/read-ops/index.ts",
        "src/tools/diagnostics/index.ts",
        "src/lib/memory/mcp-files-adapter.ts",
        "src/lib/memory/mcp-ocs-memory-adapter.ts",
        
        "src/v2/tools/check-namespace-health/**/*.ts",
        "src/tools/storage-intelligence/types.ts",
        "src/index.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-unsafe-assignment": "error",
        "@typescript-eslint/no-unsafe-member-access": "error",
        "@typescript-eslint/no-unsafe-argument": "error",
        "@typescript-eslint/no-unsafe-call": "error",
        "@typescript-eslint/no-unsafe-return": "error"
      }
    },
    {
      "files": ["src/**/*.ts", "tests/**/*.ts"],
      "rules": {
        "no-restricted-properties": [
          "warn",
          { "object": "Date", "property": "now", "message": "Use new Date().toISOString() for timestamps (D-009 Date-Time Safety)." }
        ]
      }
    },
    {
      "files": ["src/tools/**/*.ts", "src/v2/tools/**/*.ts"],
      "rules": {
        "no-restricted-properties": [
          "error",
          { "object": "Date", "property": "now", "message": "Use nowIso() for persisted timestamps or nowEpoch() for calculations (D-009)." }
        ]
      }
    }
  ]
}
