{
  "id": "zone-conflict-detection-v1",
  "name": "Zone Conflict Detection",
  "version": "1.0.0",
  "triageTarget": "zone-conflict",
  "triggers": [ { "type": "static_target", "target": "zone-conflict", "confidence": 1.0 } ],
  "blocks": [],
  "composition": { "infrastructure": [], "workload": [], "correlation": [] },
  "steps": [
    { "tool": "oc_read_machinesets", "params": { "sessionId": "<sessionId>", "namespace": "openshift-machine-api", "bounded": true }, "rationale": "MachineSet distribution and replicas per zone" },
    { "tool": "oc_read_nodes", "params": { "sessionId": "<sessionId>", "bounded": true }, "rationale": "Node readiness, conditions, and zone mapping" },
    { "tool": "oc_analyze_zone_conflicts", "params": { "sessionId": "<sessionId>" }, "rationale": "Aggregate zone skew and capacity pressure" }
  ],
  "evidenceContract": {
    "version": "v1.0.0",
    "required": ["nodeZones", "machinesets", "zoneSkew", "capacityPressure"],
    "selectors": {
      "nodeZones": [ { "type": "jsonpath", "path": "{.zones[*]}" } ],
      "machinesets": [ { "type": "jsonpath", "path": "{.sets[*].name}" } ],
      "zoneSkew": [ { "type": "jsonpath", "path": "{.skew}" } ],
      "capacityPressure": [ { "type": "jsonpath", "path": "{.capacity.utilization}" } ],
      "constraintViolations": [ { "type": "eventsRegex", "path": "(?i)FailedScheduling|No nodes fit" } ]
    },
    "completenessThreshold": 0.9
  },
  "boundaries": { "maxSteps": 3, "timeoutMs": 20000 }
}
