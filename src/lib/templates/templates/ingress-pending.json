{
  "id": "ingress-pending-v1",
  "name": "Ingress Router Pending Analysis",
  "version": "1.0.0",
  "triageTarget": "ingress-pending",
  "triggers": [ { "type": "static_target", "target": "ingress-pending", "confidence": 1.0 } ],
  "blocks": [],
  "composition": { "infrastructure": [], "workload": [], "correlation": [] },
  "steps": [
    { "tool": "oc_read_get_pods", "params": { "namespace": "openshift-ingress" }, "rationale": "List router pods and identify pending" },
    { "tool": "oc_read_describe", "params": { "resourceType": "pod", "namespace": "openshift-ingress", "name": "<pendingRouterPod>" }, "rationale": "Capture FailedScheduling events" },
    { "tool": "oc_read_describe", "params": { "resourceType": "ingresscontroller", "namespace": "openshift-ingress-operator", "name": "default" }, "rationale": "Controller placement/conditions" }
  ],
  "evidenceContract": {
    "version": "v1.0.0",
    "required": ["routerPods", "schedulingEvents", "controllerStatus"],
    "selectors": {
      "routerPods": [ { "type": "jsonpath", "path": "{.items[*].metadata.name}" } ],
      "schedulingEvents": [ { "type": "eventsRegex", "path": "(?i)FailedScheduling" } ],
      "controllerStatus": [ { "type": "yq", "path": ".status.conditions[] | {type,status,reason,message}" } ]
    },
    "completenessThreshold": 0.9
  },
  "boundaries": { "maxSteps": 3, "timeoutMs": 20000 }
}
